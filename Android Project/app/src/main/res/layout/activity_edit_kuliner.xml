<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".EditKulinerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/iv_back_to_detail_kuliner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_icon"
            android:layout_margin="10dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Data Kuliner"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/tv_id_editkuliner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:padding="10dp"
            android:visibility="gone"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_edit_foto_kuliner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/foto"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Kuliner"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="20dp"
                    />

                <EditText
                    android:id="@+id/et_nama_kuliner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Kuliner"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@drawable/backgroud_list"
                    android:padding="15dp"
                    android:layout_marginHorizontal="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Asal Kuliner"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    />

                <EditText
                    android:id="@+id/et_asal_kuliner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Asal Kuliner"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@drawable/backgroud_list"
                    android:padding="15dp"
                    android:inputType="text"
                    android:layout_marginHorizontal="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi Kuliner"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:inputType="text"
                    android:layout_marginHorizontal="20dp"
                    />

                <EditText
                    android:id="@+id/et_deskripsi_kuliner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deskripsikan Kuliner"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@drawable/backgroud_list"
                    android:padding="15dp"
                    android:inputType="textMultiLine"
                    android:justificationMode="inter_word"
                    android:layout_marginHorizontal="20dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    >
                    <Button
                        android:id="@+id/btn_edit_kuliner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dp"
                        android:backgroundTint="#098400"
                        android:fontFamily="@font/quicksand_bold"
                        android:letterSpacing="0.003"
                        android:text="Edit Kuliner"
                        android:textAllCaps="false" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>