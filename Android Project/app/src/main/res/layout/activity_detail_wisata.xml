<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".DetailWisataActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_back_to_wisata"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_icon"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/tv_id_wisata_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id Wisata"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:padding="10dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_nama_wisata_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Wisata"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:padding="10dp"
            />
        
        
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_wisata"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/foto"
                android:layout_gravity="center_horizontal"
                />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_marginTop="30dp"
               android:padding="10dp"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Lokasi Wisata"
                    android:layout_marginBottom="10dp"
                   android:fontFamily="@font/quicksand_bold"
                   android:textColor="@color/black"
                   android:textSize="18sp"
                   />

               <TextView
                   android:id="@+id/tv_lokasi_wisata_detail"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Lorem Ipsum"
                   android:justificationMode="inter_word"
                   android:textColor="@color/black"
                   android:textSize="14sp"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Maps Wisata"
                   android:layout_marginBottom="10dp"
                   android:fontFamily="@font/quicksand_bold"
                   android:textColor="@color/black"
                   android:textSize="18sp"
                   android:layout_marginTop="20dp"
                   />

               <TextView
                   android:id="@+id/tv_maps_wisata_detail"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Lorem Ipsum"
                   android:textColor="@color/black"
                   android:textSize="14sp"
                   android:justificationMode="inter_word"
                   android:layout_marginBottom="10dp"
                   android:layout_marginRight="10dp"
               />

               <Button
                   android:id="@+id/btn_check_maps"
                   android:layout_width="120dp"
                   android:layout_height="wrap_content"
                   android:text="Check Maps"
                   android:textAllCaps="false"
                   android:fontFamily="@font/quicksand_bold"
                   android:letterSpacing="0.003"
                   android:layout_gravity="end"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Deskripsi Wisata"
                   android:layout_marginBottom="10dp"
                   android:fontFamily="@font/quicksand_bold"
                   android:textColor="@color/black"
                   android:textSize="18sp"
                   android:layout_marginTop="20dp"
                   />

               <TextView
                   android:id="@+id/tv_deskripsi_wisata_detail"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Lorem Ipsum"
                   android:textColor="@color/black"
                   android:textSize="14sp"
                   android:justificationMode="inter_word"
                   />



               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="30dp"
                   >
                   <Button
                       android:id="@+id/btn_edit_wisata"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Edit Wisata"
                       android:textAllCaps="false"
                       android:letterSpacing="0.003"
                       android:backgroundTint="#FF8100"
                       android:fontFamily="@font/quicksand_bold"
                       />

                   <Button
                       android:id="@+id/btn_delete_wisata"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="0dp"
                       android:backgroundTint="#FF0000"
                       android:fontFamily="@font/quicksand_bold"
                       android:letterSpacing="0.003"
                       android:text="Delete Wisata"
                       android:textAllCaps="false" />

               </RelativeLayout>





           </LinearLayout>

        </LinearLayout>

    </ScrollView>
    

</LinearLayout>