<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:padding="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="6dp"
        android:padding="8dp"
        android:background="@drawable/backgroud_list"
        tools:ignore="MissingConstraints">
        
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/iv_foto_kuliner"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/foto"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <TextView
                android:id="@+id/tv_id_kuliner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id Kuliner"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_nama_kuliner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Kuliner"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                />
            <View
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="1dp"
                android:background="#A19B9B"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asal Kuliner"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tv_asal_kuliner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asal Kuliner"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Kuliner"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tv_deskripsi_kuliner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Kuliner"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:justificationMode="inter_word"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/btn_detail_kuliner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Detail Kuliner"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:letterSpacing="0.003"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>